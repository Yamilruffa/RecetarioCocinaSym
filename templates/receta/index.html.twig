{% extends 'base.html.twig' %}

{% block title %}Receta index{% endblock %}

{% block body %}
    <h1>Receta index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Png</th>
                <th>Descripcion</th>
                <th>Tiempoprep</th>
                <th>Porciones</th>
                <th>Dificultad</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recetum in recetas %}
            <tr>
                <td>{{ recetum.id }}</td>
                <td>{{ recetum.nombre }}</td>
                <td>{{ recetum.png }}</td>
                <td>{{ recetum.descripcion }}</td>
                <td>{{ recetum.tiempoprep }}</td>
                <td>{{ recetum.porciones }}</td>
                <td>{{ recetum.dificultad }}</td>
                <td>
                    <a href="{{ path('app_receta_show', {'id': recetum.id}) }}">show</a>
                    <a href="{{ path('app_receta_edit', {'id': recetum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_receta_new') }}">Create new</a>
{% endblock %}
