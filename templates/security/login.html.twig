{% extends 'base.html.twig' %}

{% block title %}Ingresar!{% endblock %}

{% block body %}
<div class="form-container">
    <fieldset>
        <div class="formulario">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Ya has iniciado sesión como {{ app.user.userIdentifier }}, 
                        <a href="{{ path('app_logout') }}">Cerrar sesión</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Bienvenido</h1>

                <!-- Campo para el email -->
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>

                <!-- Campo para la contraseña -->
                <label for="password">Contraseña</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                <!-- Token CSRF para seguridad -->
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                Si decides habilitar la opción de recordar usuario:
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Recordarme
                    </label>
                </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Iniciar sesión
                </button>

            </form>
        </div>
    </fieldset>
    <a href="{{ path('app_home') }}" class="btn-back">Volver al inicio</a>
</div>
{% endblock %}
