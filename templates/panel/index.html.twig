{% extends 'basehome.html.twig' %}

{% block title %}Panel de Administración{% endblock %}

{% block body %}
<h1>Panel de Administración</h1>

<!-- Lista de usuarios y sus recetas -->
{% for user in users %}
    {% if 'ROLE_ADMIN' not in user.roles %}
        <h2>Usuario: {{ user.email }}</h2>

        <!-- Botón para eliminar usuario -->
        <button class="btn-delete" onclick="openDeleteModal('deleteModalUser-{{ user.id }}')">Eliminar Usuario</button>

        <!-- Modal de confirmación de eliminación de usuario -->
        <div id="deleteModalUser-{{ user.id }}" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('deleteModalUser-{{ user.id }}')">&times;</span>
                <h3>¿Estás seguro de que deseas eliminar a este usuario?</h3>
                <form action="{{ path('admin_delete_user', {'id': user.id}) }}" method="POST">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_user' ~ user.id) }}">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <button type="button" class="btn btn-secondary" onclick="closeModal('deleteModalUser-{{ user.id }}')">Cancelar</button>
                </form>
            </div>
        </div>

        <!-- Tabla de recetas del usuario -->
        <table class="receta-table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Descripción</th>
                    <th>Tiempo de Preparación</th>
                    <th>Porciones</th>
                    <th>Dificultad</th>
                    <th>Pasos</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for recetum in user.recetas %}
                    <tr>
                        <td>{{ recetum.nombre }}</td>
                        <td>
                            {% if recetum.png %}
                                <a href="#" class="image-link" data-image="{{ asset(recetum.png) }}" onclick="openImageModal('{{ asset(recetum.png) }}')">
                                    <img src="{{ asset(recetum.png|slice(1)) }}" style="width: 50px; height: auto;">
                                </a>
                            {% else %}
                                <span>No disponible</span>
                            {% endif %}
                        </td>
                        <td>{{ recetum.descripcion }}</td>
                        <td>{{ recetum.tiempoprep }}</td>
                        <td>{{ recetum.porciones }}</td>
                        <td>{{ recetum.dificultad }}</td>
                        <td>
                            <button class="btn-pasos" onclick="openModal('modal-{{ recetum.id }}')">Ver pasos</button>
                        </td>
                        <td>
                            {% if recetum.visible == 'si' %}
                                <span class="text-success">Visible</span>
                            {% elseif recetum.visible == "no" %}
                                <span class="text-warning">Oculta</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if recetum.visible == 'si' %}
                            <!-- Botón Ocultar -->
                            <form action="{{ path('admin_hide_recipe', {'id': recetum.id}) }}" method="POST" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('hide_recipe' ~ recetum.id) }}">
                                <button type="submit" class="btn btn-warning">Ocultar</button>
                            </form>
                            {% elseif recetum.visible == 'no' %}
                                <!-- Botón Aprobar -->
                                <button class="btn-approve" onclick="openModal('approveModal-{{ recetum.id }}')">Aprobar</button>

                                <!-- Modal de confirmación de aprobación -->
                                <div id="approveModal-{{ recetum.id }}" class="modal">
                                    <div class="modal-content">
                                        <span class="close" onclick="closeModal('approveModal-{{ recetum.id }}')">&times;</span>
                                        <h3>¿Estás seguro de que deseas aprobar esta receta?</h3>
                                        <form action="{{ path('admin_approve_recipe', {'id': recetum.id}) }}" method="POST">
                                            <input type="hidden" name="_token" value="{{ csrf_token('approve_recipe' ~ recetum.id) }}">
                                            <button type="submit" class="btn btn-success">Aprobar</button>
                                            <button type="button" class="btn btn-secondary" onclick="closeModal('approveModal-{{ recetum.id }}')">Cancelar</button>
                                        </form>
                                    </div>
                                </div>
                            {% endif %}

                            
                            <!-- Botón Eliminar -->
                            <button class="btn-delete" onclick="openDeleteModal('deleteModalReceta-{{ recetum.id }}')">Eliminar</button>

                            <!-- Modal de confirmación de eliminación de receta -->
                            <div id="deleteModalReceta-{{ recetum.id }}" class="modal">
                                <div class="modal-content">
                                    <span class="close" onclick="closeModal('deleteModalReceta-{{ recetum.id }}')">&times;</span>
                                    <h3>¿Estás seguro de que deseas eliminar esta receta?</h3>
                                    <form action="{{ path('admin_delete_recipe', {'id': recetum.id}) }}" method="POST">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recetum.id) }}">
                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                        <button type="button" class="btn btn-secondary" onclick="closeModal('deleteModalReceta-{{ recetum.id }}')">Cancelar</button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="no-records">Este usuario no tiene recetas</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Modales -->
        <div id="modals-container">
            {% for recetum in user.recetas %}

            <!-- Modal para los pasos -->
            <div id="modal-{{ recetum.id }}" class="modal modal-steps">
                <div class="modal-content">
                    <span class="close" onclick="closeModal('modal-{{ recetum.id }}')">&times;</span>
                    <h2>Pasos de la receta: {{ recetum.nombre }}</h2>
                    <table class="steps-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Paso</th>
                                <th>Descripción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for paso in recetum.pasos %}
                                <tr>
                                    <td>{{ paso.numero }}</td>
                                    <td>{{ paso.nombre }}</td>
                                    <td>{{ paso.descripcion }}</td>
                                    <td>
                                        <a href="{{ path('app_vista_pasos_edit', {'id': paso.id}) }}" class="btn-edit">Editar</a>
                                        <a href="{{ path('app_vista_pasos_new', {'id': recetum.id}) }}" class="btn-show">Agregar Paso</a>
                                        <button class="btn-delete" onclick="openDeleteModal('deleteModalPaso-{{ paso.id }}')">Eliminar</button>
                                    </td>
                                </tr>

                                <!-- Modal de confirmación de eliminación de paso -->
                                <div id="deleteModalPaso-{{ paso.id }}" class="modal">
                                    <div class="modal-content">
                                        <span class="close" onclick="closeModal('deleteModalPaso-{{ paso.id }}')">&times;</span>
                                        <h3>¿Estás seguro de que deseas eliminar este paso?</h3>
                                        <form action="{{ path('app_vista_pasos_delete', {'id': paso.id}) }}" method="POST">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ paso.id) }}">
                                            <button type="submit" class="btn btn-danger">Eliminar</button>
                                            <button type="button" class="btn btn-secondary" onclick="closeModal('deleteModalPaso-{{ paso.id }}')">Cancelar</button>
                                        </form>
                                    </div>
                                </div>

                            {% else %}
                                <tr>
                                    <td colspan="4">No hay pasos disponibles para esta receta.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {% if recetum.pasos is empty %}
                        <a href="{{ path('app_vista_pasos_new_panel', {'id': recetum.id}) }}" class="btn-edit">Agregar Paso</a>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>

    {% endif %}
{% endfor %}

{% endblock %}