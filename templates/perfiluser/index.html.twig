{% extends 'basehome.html.twig' %}

{% block title %}Mi Perfil{% endblock %}

{% block body %}
<div class="body-perfil">

    <div class="contenedor-instrucciones">
        <div class="instrucciones" id="instrucciones">
            <button id="toggle-instrucciones">−</button>
            <ol>
            <h2>Informacion:</h2>
                <li>Toda receta debe ser aprobada por un administrador antes de estar disponible en la pagina.</li>
                <li>Tus recetas pueden ser modificadas en la pestaña "MIS RECETAS".</li>
            </ol>
        </div>

    <div class="section">
        <a href="{{ path('app_vista_receta_new')}}">Crear recetas</a>
    </div>

    <div class="section">
        <a href="{{ path('app_vista_receta')}}">Mis Recetas</a>
    </div>

    <div class="section">
    {% if app.user %}
    <a href="{{ path('app_recetas_favoritas') }}">Mis Favoritos</a>
    {% endif %}
    </div>


        {% if is_granted('ROLE_ADMIN') %}
        <div class="section">
            <a href="{{ path('app_panel')}}">Panel de administracion</a>
        </div>

        {% endif %}
</div>


{% endblock %}
